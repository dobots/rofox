<?xml version="1.0"?>

<launch>

    <arg name="world_name" default="$(find-pkg-share fox_gazebo)/worlds/arena_2018.world"/>
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.2"/>
    <arg name="roll" default="0.0"/>
    <arg name="pitch" default="0.0"/>
    <arg name="yaw" default="1.57"/>

    <arg name="rviz" default="false"/>
    <arg name="rviz_cfg_path" default="$(find-pkg-share fox_description)/rviz/fox.rviz"/>
    
    <!-- NOTE: sometimes you may need to run killall gzserver before launch. (gzserver rarely exits cleanly) -->
    <executable cmd="killall gzserver" cwd="/home" output="screen"/>

    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
        <arg name="world" value="$(var world_name)"/>
        <arg name="gui" value="true"/>
        <arg name="server" value="true"/>
        <arg name="pause" value="false"/>
    </include>
    
    <!-- robot state publisher -->
        <!-- Using python launch file -->
    <include file="$(find-pkg-share fox_description)/launch/fox_robstatepub_xacro.launch.py">
        <arg name="use_sim_time" value="true"/>
    </include>
        <!-- Using command substitution -->
    <!-- <node pkg="robot_state_publisher" exec="robot_state_publisher" name="robot_state_publisher" >    
        <param name="use_sim_time" value="true"/> 
        <param name="robot_description" value="$(command 'xacro $(find-pkg-share fox_description)/urdf/turtlebot3_waffle_base.urdf.xacro')" />
        <param name="publish_frequency" value="30.0"/>
        <param name="use_tf_static" value="false"/>
    </node> -->
    <!-- joint state publisher -->
    <node pkg="joint_state_publisher" exec="joint_state_publisher" name="joint_state_publisher">
        <param name="use_sim_time" value="true"/> <!-- Important to ensure TFs are in sim_time -->        
        <param name="rate" value="30.0"/>
        <param name="use_gui" value="false"/>
    </node>

    <!-- Spawn in gazebo using the robot_description topic published by robot state publisher -->
    <!-- NOTE: Make sure gazebo knows the paths in the urdf file (package:// etc.) -->
    <node pkg="gazebo_ros" exec="spawn_entity.py" name="spawn_fox" args="-entity turtlebot3_waffle -x $(var x) -y $(var y) -z $(var z) -R $(var roll) -P $(var pitch) -Y $(var yaw) -topic robot_description"/>

    <!-- Rviz (Optional) -->
    <node if="$(var rviz)" name="rviz2_fox" pkg="rviz2" exec="rviz2" args="-d $(var rviz_cfg_path)" required="false" output="screen"/>

</launch>