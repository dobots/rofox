<?xml version="1.0"?>
<launch>
  <master auto="start"/>

  <!-- Map server -->
  <arg name="map_file" default="$(find fox_localization)/map/arena.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Localization -->
  <include file="$(find fox_localization)/launch/amcl.launch"/>

  <!-- Visualization in RVIZ -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find fox_description)/rviz/fox_navigation.rviz" required="true" output="screen"/>

  <!-- Move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find fox_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find fox_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find fox_navigation)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find fox_navigation)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find fox_navigation)/config/trajectory_planner.yaml" command="load" />

    <remap from="cmd_vel" to="cmd_vel"/>
    <remap from="odom" to="odom"/>
    <remap from="scan" to="/scan"/>
    <param name="move_base/DWAPlannerROS/yaw_goal_tolerance" value="1.0"/>
    <param name="move_base/DWAPlannerROS/xy_goal_tolerance" value="1.0"/>

  </node>
</launch>


