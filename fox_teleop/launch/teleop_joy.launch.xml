<launch>
    <!-- Make sure you run ps3joy.py script before launching this! -->

    <!-- Start joy node to publish events to /joy topic -->
    <node name="joy_node" pkg="joy" exec="joy_node" output="screen" required="true">        
        <param name="device_id" value="0" type="int" /> <!-- Will use /dev/input/js0 -->
        <param name="deadzone" value="0.12" type="double" />
    </node>
    
    <!-- teleop_joy node (/joy to /cmd_vel) -->
    <node name="teleop_joy" pkg="fox_teleop" exec="teleop_joy.py" output="screen" required="true">
        <!-- Axes -->
        <param name="axis_linear" value="1" type="int"/>
        <param name="axis_angular" value="0" type="int"/>
        <!-- Scaling -->
        <param name="scale_linear" value="1.0" type="double"/>
        <param name="scale_angular" value="1.0" type="double"/>
    </node>

</launch>